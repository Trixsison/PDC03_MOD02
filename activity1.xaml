<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC3_MOD2.activity1" Title="XAML Page and Navigation">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Aqua" Padding="15" CornerRadius="0">
                <Slider VerticalOptions="CenterAndExpand" ValueChanged="OnSliderValueChanged"/>
            </Frame>
            
            <Label Text="My first page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   FontSize="Large"
                   FontAttributes="Bold"
                   TextColor="DeepPink"
                   IsVisible="True"/>
            <Label Text="This page contains button below which redirect back to the main page when it clicks." FontSize="16" Padding="30,0,30,0"/>
            

            <Button Text="Back" Clicked="BackPage"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>